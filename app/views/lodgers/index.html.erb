<p id="notice"><%= notice %></p>

<%= form_tag(lodgers_path, method: :get) do%>
<%= text_field_tag 'search', nil, placeholder: 'Enter search term...'%>
<%=submit_tag "Search"%>
 
 <% end%>


<h1>Listing Lodgers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Sex</th>
      <th>Cpf</th>
      <th>Rg</th>
      <th>Maritalstatus</th>
      <th>Occupation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lodgers.each do |lodger| %>
      <tr>
        <td><%= lodger.name %></td>
        <td><%= lodger.phone %></td>
        <td><%= lodger.sex %></td>
        <td><%= lodger.cpf %></td>
        <td><%= lodger.rg %></td>
        <td><%= lodger.maritalstatus %></td>
        <td><%= lodger.occupation %></td>
        <td><%= link_to 'Show', lodger %></td>
        <td><%= link_to 'Edit', edit_lodger_path(lodger) %></td>
        <td><%= link_to 'Destroy', lodger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lodger', new_lodger_path %>
