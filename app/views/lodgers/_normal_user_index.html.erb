<p id="notice"><%= notice %></p>
<h1>Listing Lodgers</h1>
<%= form_tag(lodgers_path, method: :get) do%>
  <%= text_field_tag 'search', nil, placeholder: 'Enter search term...'%>
  <%=submit_tag "Search"%>
   <% end%>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lodgers.each do |lodger| %>
        <tr>
          <td><%= lodger.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Back', root_path %>