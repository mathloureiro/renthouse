<p id="notice"><%= notice %></p>
<h1>Listing Houses</h1>
<%= form_tag(houses_path, method: :get) do%>
<%= text_field_tag 'search', nil, placeholder: 'Enter search term...'%>
<%=submit_tag "Search"%>
<% end%>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Typehouse</th>
      <th>Compartment</th>
      <th>Status</th>
      <th>Street</th>
      <th>Number</th>
      <th>ZIP</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.id %></td>
        <td><%= house.typehouse %></td>
        <td><%= house.compartment %></td>
        <td><%= house.status %></td>
        <td><%= house.address.street %></td>
        <td><%= house.address.number %></td>
        <td><%= house.address.zip %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', root_path %>